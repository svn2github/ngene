sampler sceneTex: register(s0);


struct VertexOutput
{
	float4 hPosition  : POSITION0;
    float2 texCoord   : TEXCOORD0;
};


float4 main(VertexOutput IN): COLOR
{	
	float4 scene = tex2D(sceneTex, IN.texCoord);
	float4 colour = 1.0f - scene;
	colour.w = 1.0f;
	
	return colour;
}